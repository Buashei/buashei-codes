{
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "all",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "always",
  "endOfLine": "lf",
  "embeddedLanguageFormatting": "auto",
  "overrides": [
    {
      "files": ["**/*.{ts,tsx,js,jsx}"],
      "options": {
        "jsxSingleQuote": false,
        "parser": "typescript",
        "semi": true,
        "printWidth": 80
      }
    },
    {
      "files": ["**/*.{css,scss}"],
      "options": {
        "parser": "css",
        "singleQuote": false
      }
    },
    {
      "files": ["**/*.json"],
      "options": {
        "parser": "json",
        "tabWidth": 2
      }
    },
    {
      "files": ["**/Dockerfile", "**/Dockerfile.*"],
      "options": {
        "parser": "sh",
        "printWidth": 80,
        "tabWidth": 2,
        "keepComments": true
      }
    },
    {
      "files": ["**/*.{yml,yaml}"],
      "options": {
        "parser": "yaml",
        "tabWidth": 2,
        "printWidth": 100,
        "singleQuote": true,
        "bracketSpacing": true,
        "proseWrap": "preserve"
      }
    }
  ]
}
